@using TodoCore.Models
@model Recipe
@{
    ViewData["Title"] = "SampleFormView";
}

<h1>SampleForm View</h1>
<div class="panel-default">
    <div class="panel-heading">@Model.Name</div>
    <div>@Model.Description</div>
</div>
<hr />
<h2>Insert Recipe</h2>
<form asp-action="UpdateItem" method="post">
    <label asp-for="Name">Name:</label>
    <input asp-for="Name" />
    <label asp-for="Description">Description:</label>
    <input asp-for="Description" />
    <label asp-for="RecipeIngredients">Ingredients</label>
    <input asp-for="RecipeIngredients" />
    <br />
    <button type="submit">Save</button>
</form>